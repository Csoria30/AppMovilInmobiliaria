<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color cuando el item está seleccionado/activo -->
    <item android:state_checked="true" android:color="@color/primary" />
    <!-- Color cuando el item está presionado -->
    <item android:state_pressed="true" android:color="@color/primary_dark" />
    <!-- Color por defecto -->
    <item android:color="@color/text_secondary" />
</selector>