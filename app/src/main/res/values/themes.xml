<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema: Base con colores verdes -->
    <style name="Theme.AppInmobiliaria" parent="Theme.Material3.DayNight">
        <!-- Colores principales VERDES -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Colores secundarios VERDES -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/green_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Colores de superficie -->
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Color de fondo -->
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- ✅ CLAVE: Estilo de botones personalizado -->
        <item name="materialButtonStyle">@style/CustomGreenButtonStyle</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>

    <!-- Tema: MainActivity -->
    <style name="Theme.AppInmobiliaria.NoActionBar" parent="Theme.AppInmobiliaria">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- ✅ IMPORTANTE: Heredar todos los colores verdes del tema padre -->
        <!-- No sobrescribir colores aquí -->
    </style>

    <!-- Tema: Botones Verdes -->
    <style name="CustomGreenButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Tema: ActionBar -->
    <style name="Theme.AppInmobiliaria.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="Theme.AppInmobiliaria.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
    </style>

    <!-- Tema: Ventanas de dialogos -->
    <style name="CustomDialogTheme" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_background_white</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
    </style>
</resources>