<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/login_gradient_background"
    tools:context=".ui.contrato.ContratoFormFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Imagen / header -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/ivInmueble"
                    android:layout_width="140dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="Imagen inmueble"
                    android:src="@drawable/ic_home_placeholder"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tvDireccionHead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Direcci贸n: -"
                    android:textStyle="bold"
                    android:textColor="#2C3E50"
                    android:textSize="18sp"
                    android:gravity="center"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Datos del contrato -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informaci贸n del contrato"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#2C3E50"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvTipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo: -"
                    android:textColor="#34495E"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvFechaInicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha inicio: -"
                    android:textColor="#34495E"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvFechaFin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha finalizaci贸n: -"
                    android:textColor="#34495E"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvMonto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Monto alquiler: $ -"
                    android:textColor="@color/primary"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvEstado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Estado: -"
                    android:textColor="#2E7D32"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tvInquilinoResumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inquilino: -"
                    android:textColor="#34495E"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botones acci贸n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerPagos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ver pagos"
                android:textAllCaps="false"
                app:icon="@drawable/ic_money"
                app:iconPadding="8dp"
                app:iconTint="@color/white"
                app:backgroundTint="@color/primary"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVerInquilino"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ver inquilino"
                android:textAllCaps="false"
                app:icon="@drawable/ic_person"
                app:iconPadding="8dp"
                app:iconTint="@color/white"
                app:backgroundTint="@color/primary"
                android:textColor="@android:color/white"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>